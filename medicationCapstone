/////////creating tables

create table medicationInfo(
	medicationID int(10) not  primary key 
	genericName varchar(100) not   
	brandName varchar(100) not 
 
);

create table medicationUseInfo(
	medicationID int(10) not ,
	medicationClass varchar(100) not ,
	mainPurpose varchar(100) not ,
	foreign key(medicationID) references medicationInfo(medicationID)
);

create table sideEffects(
	medicationID int(10) not ,
	upperBody varchar(200) not ,
	lowerBody varchar(200) not ,
	foreign key(medicationID) references medicationInfo(medicationID)	
);

create table relatedInformation(
	medicationID int(10) not ,
	yearOfApproval year not ,
	prescriptionQuantity varchar(10) not ,
	foreign key(medicationID) references medicationInfo(medicationID)
);
